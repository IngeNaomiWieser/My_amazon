<h1>Admin panel</h1>

<p>Number of products</p>
<p><%= @products_count %></p>
<p>Number of reviews</p>
<p><%= @reviews_count %></p>
<p>Number of users</p>
<p><%= @users_count%></p>

<br>

<div class="container">
  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </rt>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
    </tr>
    <% end  %>
  </table>

  <br>
  <table>
    <tr>
      <th>Product Name</th>
      <th>Product ID</th>
    </tr>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.id %></td>
    </tr>
    <% end  %>
  </table>
</div>
