<div class="container">
  <h3>Contact Us</h3>

  <%= form_tag contact_path do %>
    <div class="well">
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, '', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, '', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, '', class: 'form-control' %>
      </div>
      <%= submit_tag 'Contact Us!', class: 'btn btn-success' %>
    </div>
  <% end %>

  <% if @name %>
    <p>Thank you <%= @name %> for contacting us!</p>
  <% end  %>
</div>
